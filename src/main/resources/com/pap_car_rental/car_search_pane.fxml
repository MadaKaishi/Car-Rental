<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pap_car_rental.CarPaneController">
   <left>
      <ImageView fx:id="image" fitHeight="100.0" fitWidth="105.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <HBox spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="carCost" text="Cost">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Label>
            <Label fx:id="carName" contentDisplay="CENTER" text="Car Name" textAlignment="CENTER" />
            <Button fx:id="selectButton" mnemonicParsing="false" text="Select" />
         </children>
      </HBox>
   </center>
   <top>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="carMake" text="Car Make" />
            <Label fx:id="carModel" text="Car Model" />
            <Label fx:id="carType" text="Car Type" />
         </children>
      </HBox>
   </top>
</BorderPane>
